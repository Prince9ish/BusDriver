<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation1"
    tools:context=".TagTest">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1040dp"
        android:background="#00EBEAEB"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCFAD849"
            android:orientation="horizontal"
            android:padding="2pt">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poiret_one"
                android:gravity="left|center_vertical"
                android:paddingLeft="15pt"
                android:text="STUDENT TAG READER"
                android:textSize="25pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#00000000"
                android:fontFamily="@font/poiret_one"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5pt"
                android:text="Please Tap Tag On Reader"
                android:textSize="19pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="895dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal|fill_horizontal|fill_vertical"
                android:layout_marginLeft="2pt"
                android:layout_weight="2"
                android:padding="5pt"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="5pt"
                android:paddingBottom="10pt">

                <EditText
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:backgroundTint="@null"
                    android:ems="5"
                    android:fontFamily="@font/rock_salt"
                    android:gravity="center_horizontal|top"
                    android:inputType="number"
                    android:letterSpacing="0.2"
                    android:lineSpacingExtra="8sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical|fill_vertical"
                    android:paddingLeft="0pt"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="ID         :"
                    android:textSize="24pt" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical|fill_vertical"
                    android:paddingLeft="0pt"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Name  : "
                    android:textSize="24pt" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal|center_vertical|fill_vertical"
                    android:paddingLeft="0pt"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Status"
                    android:textSize="26pt" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poiret_one"
                    android:gravity="center_horizontal|center_vertical|fill_vertical"
                    android:paddingLeft="0pt"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Current --> Next"
                    android:textColor="#898989"
                    android:textSize="22pt"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="8pt"
            android:orientation="horizontal"
            android:paddingLeft="25pt"
            android:paddingRight="25pt">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFDD94"
                android:fontFamily="sans-serif-light"
                android:text="Back"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10pt"
                android:layout_weight="1"
                android:background="#FA897B"
                android:fontFamily="sans-serif-light"
                android:text="Clear"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10pt"
                android:layout_weight="1"
                android:background="#D0E6A5"
                android:fontFamily="sans-serif-light"
                android:text="Confirm"
                android:textSize="26sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>